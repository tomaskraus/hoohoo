{
  "name": "hoohoo",
  "version": "0.1.4",
  "description": "Checks JavaScript/TypeScript examples in your Markdown document for errors. It can also test the output of examples against assertions written in examples' comments.",
  "main": "src/index.js",
  "bin": "bin/hoohoo.js",
  "files": [
    "src",
    "bin"
  ],
  "scripts": {
    "format:check": "npx prettier --check .",
    "format:write": "npx prettier --write .",
    "lint:check": "eslint .",
    "lint:fix": "eslint --fix .",
    "test": "jest",
    "lint": "npx eslint",
    "check-md": "npx hoohoo check"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/tomaskraus/hoohoo.git"
  },
  "keywords": [
    "markdown",
    "test",
    "doctest",
    "examples",
    "testing",
    "mdjs",
    "assertion",
    "CI",
    "documentation",
    "readme.md",
    "clogtest",
    "SSP",
    "simple-string-pattern"
  ],
  "author": "Tomas Kraus <tomas.kraus.dev@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "bugs": {
    "url": "https://github.com/tomaskraus/hoohoo/issues"
  },
  "homepage": "https://github.com/tomaskraus/hoohoo#readme",
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.11",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^12.0.0",
    "debug": "^4.3.6",
    "clogtest": "git+https://github.com:tomaskraus/clogtest",
    "typescript": "^5.5.4"
  }
}
